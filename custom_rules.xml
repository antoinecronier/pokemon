<?xml version="1.0" encoding="UTF-8"?>
<project name="custom" default="help">
    <import file="build.rules.xml"/>

    <!-- Load keystore params for release mode -->
    <property file="${env.KEYSTORE_PATH}/${ant.project.name}.properties" />
    
	<!-- Library mupdf -->
    <property name="library.mupdf.path" value="libs/mupdf" />
	<!-- Library GooglePlayService -->
    <property name="library.googleplayservice.path" value="libs/googleplayservice" />
	<!-- Library androidappcompatv7 -->
    <property name="library.androidappcompatv7.path" value="libs/androidappcompatv7" />
	
	<!-- Override setup target to update library dependencies -->
    <target name="-setup" depends="harmony-rules.-setup">
	<!-- Update viewpageindicator android library -->
        <antcall target="-update-library">
            <param name="library.update" value="${library.mupdf.path}"/>
        </antcall>
		<antcall target="-update-library">
            <param name="library.update" value="${library.googleplayservice.path}"/>
        </antcall>
		<antcall target="-update-library">
            <param name="library.update" value="${library.androidappcompatv7.path}"/>
        </antcall>
    </target>

    <!-- Override pre-build target to update library dependencies -->
    <target name="-pre-build" depends="android_rules.-pre-build">
    </target>
</project>
